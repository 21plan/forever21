<view class="plan">
	<view class="section">
		<text>坚持项目：</text>
		<input  maxlength="15" placeholder="最大输入长度15" value="{{inputvalue}}" bindinput="bindKeyInput"/>
	</view>
	<view class="section">
		<text>开始时间：</text>
	  <picker mode="date" value="{{date}}" start="{{cur_date}}" bindchange="bindDateChange">
	    <view class="picker">
	      {{date}}
	    </view>
	  </picker>
	</view>
	<view class="section">
		<text>需要金币：</text>
		<text>210</text>
	</view>
</view>
<view class="coin">
	<text>我的金币:{{coin}}</text>
</view>
<view class="bottom-button">
<button type="primary" size="{{defaultSize}}" loading="{{loading}}" plain="true"
			disabled="{{disabled}}" bindtap="save" class="save-card" hover-class="other-button-hover"> 添加计划 </button>
</view>
